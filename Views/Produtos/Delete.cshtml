    <hr class="styleLinha" size="4">
</div>

<h3>Você tem certeza que deseja deletar esse item?</h3>


<div>
    <dl class="row">
        <dt class="col-sm-2 mt-2 ms-4">
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>
        <dd class="col-sm-10 mt-2 ms-4">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class="col-sm-2 mt-2 ms-4">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10 mt-2 ms-4">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2 mt-2 ms-4">
            @Html.DisplayNameFor(model => model.PrecoUnitario)
        </dt>
        <dd class="col-sm-10 mt-2 ms-4">
            @Html.DisplayFor(model => model.PrecoUnitario)
        </dd>
        <dt class="col-sm-2 mt-2 ms-4">
            @Html.DisplayNameFor(model => model.QtdEstoque)
        </dt>
        <dd class="col-sm-10 mt-2 ms-4">
            @Html.DisplayFor(model => model.QtdEstoque)
        </dd
