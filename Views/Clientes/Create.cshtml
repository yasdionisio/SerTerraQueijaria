@model SerTerraQueijaria.Models.Cliente

@{
    Layout = "_Layout-Admin";
    ViewData["Title"] = "Create";
}

<h1 class="montserrat-titulo">CRIAR</h1>

<hr class="linha-admin">

<div class="container">
    <div class="col-md-4">
        <!-- Coluna menor para alinhar mais à esquerda -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-2">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="Fone" class="control-label"></label>
                <input asp-for="Fone" class="form-control" />
                <span asp-validation-for="Fone" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>

            <div class="form-group mt-2 d-flex">
                <input type="submit" value="Criar" class="btn btn-outline-success mt-2 me-2" />
                <a asp-action="Index" class="btn border-1 border-dark mt-2 me-2">
                    <svg bootstrap-icon="ArrowLeft" width="16" height="16" aria-label="Voltar"></svg> Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


