@model IEnumerable<SerTerraQueijaria.Models.Cliente>

@{
    Layout = "_Layout-Admin";
    ViewData["Title"] = "Index";
}

<h1 class="montserrat-titulo">CLIENTES</h1>

<hr class="linha-admin">

<div class="table-responsive mt-4">
    <table class="table table-striped table-hover table-bordered rounded-3 border-1 border-dark">
        <thead>
            <tr>
                <th class="col">
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cpf)
                </th>
                <th>
                    <a asp-action="Create" class="btn btn-outline-dark m-1 col-md d-none d-lg-block d-md-block cols-md-6 mt-1 col-md">
                        <svg bootstrap-icon="PlusSquare" width="16" height="16" arial-label="Criar"></svg>
                        Criar
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td classe="col">
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cpf)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-outline-dark m-1 col-md d-none d-lg-block d-md-block cols-md-6 mt-1 col-md">
                            <svg bootstrap-icon="PencilSquare" width="16" height="16" arial-label="Editar"></svg>
                            Editar
                        </a>

                        <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-outline-dark m-1 col-md d-none d-lg-block d-md-block cols-md-6 mt-1 col-md">
                            <svg bootstrap-icon="InfoCircle" width="16" height="16" arial-label="Detalhes"></svg>
                            Detalhes
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-outline-dark m-1 col-md d-none d-lg-block d-md-block cols-md-6 mt-1 col-md">
                            <svg bootstrap-icon="Trash" width="16" height="16" arial-label="Deletar"></svg>
                            Deletar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>