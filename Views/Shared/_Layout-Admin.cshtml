<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SerTerraQueijaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SerTerraQueijaria.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/img/favicon.ico.png">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:wght@400;500&display=swap" rel="stylesheet">

</head>

<body>
    
    <header>
        <nav>
            <div class="container">

                <!-- CIMA -->
                <div class="container text-center">
                    <div class="row w-100 align-items-center">

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="d-flex align-items-center">
                                <input class="form-control w-75" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-dark ms-2">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <partial name="_LoginPartial.cshtml" />
                        </div>

                    </div>
                </div>

                <!-- MEIO -->
                <div class="container border-top w-100 h-25 d-flex align-items-end border-bottom-0"
                     style="flex-direction: row">

                    <div class="d-flex flex-grow-1 w-100 justify-content-center">
                        <img src="~/img/logoSerTerra.png" alt="Logo SerTerra" id="Logo" height="80" />
                    </div>
                </div>
            </div>

            <!-- BAIXO -->

            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">


                        <ul class="navbar-nav">

                            <li class="nav-item">
                                <a class="nav-link navegacao" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link navegacao" asp-area="" asp-controller="Home" asp-action="Contato">SOBRE</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link navegacao" asp-area="" asp-controller="Home" asp-action="Contato">CONTATO</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link navegacao" asp-area="" asp-controller="TiposProdutos" asp-action="Index">CATEGORIA</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link navegacao" asp-area="" asp-controller="Produtos" asp-action="Index">PRODUTOS</a>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>

        </nav>
    </header>

    <main role="main" class="container" style="min-height: 650px">
        @RenderBody()
    </main>

    <br>
    <br>
    <br>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SerTerraQueijaria - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

