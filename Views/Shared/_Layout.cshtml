<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SerTerraQueijaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SerTerraQueijaria.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/img/favicon.ico.png">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:wght@400;500&display=swap" rel="stylesheet">

</head>

<body>

    <header>
        <nav>
            <div class="container">

                <!-- CIMA -->
                <div class="container text-center">
                    <div class="row w-100 align-items-center">

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="d-flex align-items-center">
                                <input class="form-control w-75" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-dark ms-2">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <partial name="_LoginPartial.cshtml" />
                        </div>

                    </div>
                </div>

                <!-- MEIO -->
                <div class="container border-top w-100 h-25 d-flex align-items-end border-bottom-0"
                     style="flex-direction: row">

                    <div class="d-flex flex-grow-1 w-100 justify-content-center">
                        <img src="~/img/logoSerTerra.png" alt="Logo SerTerra" id="Logo" height="80" />
                    </div>
                </div>
            </div>

            <!-- BAIXO -->

            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">


                        <ul class="navbar-nav">

                            <li class="nav-item">

                                <a class="navlink  navegacao" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="navlink navegacao" asp-area="" asp-controller="Produtos" asp-action="ProdutosCard">PRODUTOS</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="navlink navegacao" asp-area="" asp-controller="Home" asp-action="SOBRE">SOBRE</a>
                            </li>
                            <li class="nav-item">
                                <a class="navlink navegacao" asp-area="" asp-controller="Home" asp-action="Contato">CONTATO</a>
                            </li>
                        
                        </ul>

                    </div>
                </div>
            </nav>

        </nav>
    </header>

    <div class="seila">
        <main role="main" class="container">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light py-4 border-top">
        <div class="container">
            <div class="row w-100" style="display: flex; justify-content: space-between;">

                <div class="col-md-4">
                    <h5 class="fw-bold">Navegação</h5>
                    <ul class="list-unstyled">
                        <li class="nav-footer ">
                            <a class="footer text-dark text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-footer">
                            <a class="footer text-dark text-decoration-none" asp-area="" asp-controller="Home" asp-action="Produtos">Produtos</a>
                        </li>
                        <li class="footer-item">
                            <a class="footer text-dark text-decoration-none" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre</a>
                        </li>
                        <li class="nav-footer">
                            <a class="footer text-dark text-decoration-none" asp-area="" asp-controller="Home" asp-action="Contato">Contato</a>
                        </li>
                </div>

                <div class="col-md-4">
                    <h5 class="fw-bold">Contato</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-telephone"></i> (00) 00000-0000</li>
                        <li><i class="bi bi-envelope"></i> serterraqueijaria@gmail.com</li>
                        <li><i class="bi bi-geo-alt"></i> Rua Lactose, Leitolândia, Rio de Leite - RL</li>
                    </ul>
                </div>

                <div class="col-md-4">
                    <h5 class="fw-bold">Redes Sociais</h5>
                    <a href="#" class="text-dark me-2"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-dark me-2"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-dark"><i class="bi bi-youtube"></i></a>
                </div>
            </div>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>